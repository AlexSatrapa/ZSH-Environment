function showdiff {
   git status
   GIT_EXTERNAL_DIFF="~/.zsh.d/bbedit-diff-driver" git diff
}

# Inspired by and based on work by J Corbin at
# http://github.com/jcorbin/zsh-git

function switch {
	if [ -z "$1" ] ; then
		git branch
	else
		git checkout $1
	fi
}

# http://www.jukie.net/~bart/conf/zsh.d/S55_git
function gitize() {
   git init \
   && git add . \
   && git commit -a -m "Imported into git." \
   && git gc
}

function pullpush {
   git svn rebase && git svn dcommit
   }

function git_rprompt() {
   if ! zgit_isgit ; then
      echo ''
      return
   fi

   if [ -z "$1" ] ; then
      x='1;37'
   else
      x=$1
   fi

   echo -n "%{\\e[${x}m%}$(zgit_head) ["
   if ! zgit_isworktreeclean; then
      echo -n '!'
   fi
   
   if zgit_hasunmerged; then
      echo -n '*'
   fi
   
   if zgit_hasuntracked; then
      echo -n '?'
   fi
   
   echo "]%{\\e[0m%}"
}

setopt promptsubst
autoload -U zgitinit
zgitinit
